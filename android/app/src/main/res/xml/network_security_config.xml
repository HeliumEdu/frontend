<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Allow cleartext traffic for debugging (remove in production) -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </base-config>
    
    <!-- For debugging purposes, you can add specific domains -->
    <domain-config cleartextTrafficPermitted="false">
        <domain includeSubdomains="true">api.heliumedu.com</domain>
    </domain-config>
</network-security-config>

