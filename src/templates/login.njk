{% extends "src/templates/base.njk" %}

{% block title %}{{ PROJECT_NAME }} | Login{% endblock %}

{% block content %}
    <div class="main-container">
        <div class="container">
            <div class="page-content">
                <div class="row">
                    <div class="col-sm-10 col-sm-offset-1">
                        <div class="login-container">
                            <div class="well">
                                <h4 class="header blue lighter bigger">
                                    <i class="icon-key blue"></i>
                                    Enter Your Login Information
                                </h4>

                                <div class="space-6"></div>

                                <div id="status" class="alert hidden"></div>

                                <form id="login-form" method="post">
                                    <fieldset>
                                        <label class="block clearfix">
                                            <div class="input-group no-padding">
                                                <span class="input-group-addon">
                                                    <i class="icon-user"></i>
                                                </span>

                                                <input type="text" name="username" required placeholder="Username" class="form-control" id="id_username" />
                                            </div>
                                        </label>

                                        <label class="block clearfix">
                                            <div class="input-group no-padding">
                                                <span class="input-group-addon">
                                                    <i class="icon-lock"></i>
                                                </span>

                                                <input type="password" name="password" required placeholder="Password" class="form-control" id="id_password" />
                                            </div>
                                        </label>

                                        <div class="space"></div>

                                        <div class="clearfix">
                                            <button type="submit"
                                                    class="width-35 pull-right btn btn-sm btn-primary">
                                                Sign in
                                                <i class="icon-signin icon-on-right"></i>
                                            </button>
                                        </div>

                                        <div class="space-4"></div>
                                    </fieldset>
                                </form>

                                <div class="clearfix">
                                    <a href="/register">
                                        Need an account?
                                    </a>
                                    <a href="/forgot" class="pull-right">
                                        Forgot your password?
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}